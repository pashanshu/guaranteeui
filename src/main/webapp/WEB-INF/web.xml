<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UserServices</servlet-name>
    <servlet-class>services.UserServices</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>EditGridServlet</servlet-name>
    <servlet-class>services.EditGridServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>FormServlet</servlet-name>
    <servlet-class>services.FormServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>UserServices</servlet-name>
    <url-pattern>/UserServices</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditGridServlet</servlet-name>
    <url-pattern>/EditGridServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FormServlet</servlet-name>
    <url-pattern>/FormServlet</url-pattern>
  </servlet-mapping>

</web-app>